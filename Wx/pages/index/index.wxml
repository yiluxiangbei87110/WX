<!--index.wxml-->
<view class="container">
  <view  bindtap="bindViewTap" class="userinfo">
    <image class="userinfo-avatar animated bounceInLeft" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
    <text class="userinfo-nickname">{{userInfo.nickName}}</text>
  </view>
  <view class="usermotto animated rubberBand" bindtap="gotoWX">
    <text class="user-motto">{{motto}}</text>
  </view>
</view>
